<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#000000">

    <TextView
        android:id="@+id/colorRed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/colorOrange"
        android:layout_toLeftOf="@id/colorOrange"
        android:background="#FF0000"
        android:padding="10dp"
        android:text="RED"
        android:textColor="#000000"
        android:textSize="10sp">
    </TextView>
    <TextView
        android:id="@+id/colorOrange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/colorYell"
        android:layout_toLeftOf="@id/colorYell"
        android:background="#FFA500"
        android:padding="10dp"
        android:text="ORANGE"
        android:textColor="#000000"
        android:textSize="10sp">
    </TextView>
    <TextView
        android:id="@+id/colorYell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/colorFuc"
        android:layout_toLeftOf="@id/colorFuc"
        android:text="YELLOW"
        android:background="#FFFF00"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="10sp">
    </TextView>
    <TextView
        android:id="@+id/colorFuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="100dp"
        android:background="#FF00FF"
        android:padding="10dp"
        android:text="FUCHSIA"
        android:textColor="#FFFFFF"
        android:textSize="10sp">
    </TextView>
    <TextView
        android:id="@+id/colorBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/colorFuc"
        android:layout_toLeftOf="@id/colorFuc"
        android:background="#0000FF"
        android:padding="10dp"
        android:text="BLUE"
        android:textColor="#FFFFFF"
        android:textSize="10sp">
    </TextView>
    <TextView
        android:id="@+id/colorPurple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/colorBlue"
        android:layout_toLeftOf="@id/colorBlue"
        android:background="#800080"
        android:padding="10dp"
        android:text="PURPLE"
        android:textColor="#FFFFFF"
        android:textSize="10sp">
    </TextView>
    <TextView
        android:id="@+id/colorGreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/colorPurple"
        android:layout_toLeftOf="@id/colorPurple"
        android:background="#008000"
        android:padding="10dp"
        android:text="GREEN"
        android:textColor="#FFFFFF"
        android:textSize="10sp">
    </TextView>

</RelativeLayout>