<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <!-- Punt central del rellotja  -->
    <TextView
        android:id="@+id/punt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.482"> </TextView>

    <TextView
        android:id="@+id/a1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="12sp"
        app:layout_constraintCircle="@id/punt"
        app:layout_constraintCircleAngle="30"
        app:layout_constraintCircleRadius="100dp"/>

    <TextView
        android:id="@+id/a2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="12sp"
        app:layout_constraintCircle="@id/punt"
        app:layout_constraintCircleAngle="60"
        app:layout_constraintCircleRadius="100dp"/>
    <TextView
        android:id="@+id/a3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="12sp"
        app:layout_constraintCircle="@id/punt"
        app:layout_constraintCircleAngle="90"
        app:layout_constraintCircleRadius="100dp"/>
    <TextView
        android:id="@+id/a4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="12sp"
        app:layout_constraintCircle="@id/punt"
        app:layout_constraintCircleAngle="120"
        app:layout_constraintCircleRadius="100dp"/>
    <TextView
        android:id="@+id/a5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="12sp"
        app:layout_constraintCircle="@id/punt"
        app:layout_constraintCircleAngle="150"
        app:layout_constraintCircleRadius="100dp"/>
    <TextView
        android:id="@+id/a6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:textSize="12sp"
        app:layout_constraintCircle="@id/punt"
        app:layout_constraintCircleAngle="180"
        app:layout_constraintCircleRadius="100dp"/>
    <TextView
        android:id="@+id/a7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:textSize="12sp"
        app:layout_constraintCircle="@id/punt"
        app:layout_constraintCircleAngle="210"
        app:layout_constraintCircleRadius="100dp"/>
    <TextView
        android:id="@+id/a8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:textSize="12sp"
        app:layout_constraintCircle="@id/punt"
        app:layout_constraintCircleAngle="240"
        app:layout_constraintCircleRadius="100dp"/>


    <TextView
        android:id="@+id/a9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="09"
        android:textSize="12sp"
        app:layout_constraintCircle="@id/punt"
        app:layout_constraintCircleAngle="270"
        app:layout_constraintCircleRadius="100dp"/>
    <TextView
        android:id="@+id/a10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textSize="12sp"
        app:layout_constraintCircle="@id/punt"
        app:layout_constraintCircleAngle="300"
        app:layout_constraintCircleRadius="100dp"/>
    <TextView
        android:id="@+id/tv_11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11"
        android:textSize="11sp"
        app:layout_constraintCircle="@id/punt"
        app:layout_constraintCircleAngle="330"
        app:layout_constraintCircleRadius="100dp"/>

    <TextView
        android:id="@+id/tv_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12"
        android:textSize="12sp"
        app:layout_constraintCircle="@id/punt"
        app:layout_constraintCircleAngle="0"
        app:layout_constraintCircleRadius="100dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>